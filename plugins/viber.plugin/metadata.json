{
	"icon": "viber",
	"label": "Viber",
	"description": "Chamadas gratuitas, compartilhamento de texto e imagem com qualquer pessoa, em qualquer lugar",
	"license": "Adware",
	"category": "Aplicativos",
	"scripts": {
		"exec": {
			"label": "Instalar",
			"command": "run-as-root dnf -y install https://download.cdn.viber.com/desktop/Linux/viber.rpm"
