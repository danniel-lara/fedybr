{
	"label": "Arc Theme",
	"description": "Um tema plano com elementos transparentes.",
	"license": "GPLv3",
	"category": "Temas",
	"scripts": {
		"exec": {
			"label": "Instalar",
			"command": "run-as-root dnf -y install arc-theme"
		},
		"undo": {
			"label": "Remover",
			"command": "run-as-root dnf -y remove arc-theme"
		},
		"status": { "command": "rpm --quiet --query arc-theme" }
	}
}
